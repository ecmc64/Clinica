@model Clinica.Web.Models.TicketPago

@{
    ViewData["Title"] = "Create";
}

<h2>Crear</h2>

<form asp-action="Create">
    <div class="form-horizontal">
        <h4>TicketPago</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="CitaId" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="CitaId" class ="form-control" asp-items="ViewBag.CitaId"></select>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="NumeroComprobante" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="NumeroComprobante" class="form-control" />
                <span asp-validation-for="NumeroComprobante" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <div class="checkbox">
                    <input asp-for="Pagado" />
                    <label asp-for="Pagado"></label>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Crear" class="btn btn-primary" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Volver a Listado</a>
</div>

