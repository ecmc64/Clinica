@model IEnumerable<Clinica.Web.Models.PacienteCategoria>

@{
    ViewData["Title"] = "Index";
}

<h2>Listado</h2>

<p>
    <a asp-action="Create">Crear Nuevo</a>
</p>
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estado)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estado)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.PacienteCategoriaId">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.PacienteCategoriaId">Detalles</a> |
                <a asp-action="Delete" asp-route-id="@item.PacienteCategoriaId">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
