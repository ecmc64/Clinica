@*@model IEnumerable<Clinica.Web.Models.Paciente>*@
@using Clinica.Util
@model PaginatedList<Clinica.Web.Models.Paciente>

@{
    ViewData["Title"] = "Index";
}

<h2>Listado</h2>

<p>
    <a asp-action="Create">Crear Nuevo</a>
</p>
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().Direccion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().Estado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().FechaNacimiento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().NumeroDocumento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().Telefonos)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Direccion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Estado)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FechaNacimiento)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NumeroDocumento)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Telefonos)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.PacienteId">Editar</a> |
                    <a asp-action="Details" asp-route-id="@item.PacienteId">Detalles</a> |
                    <a asp-action="Delete" asp-route-id="@item.PacienteId">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@{
    var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.HasNextPage ? "disabled" : "";
}

<a asp-action="Index"
   asp-route-numPagina="@(Model.PageIndex - 1)"
   class="btn btn-default @prevDisabled">
    Anterior
</a>
<a asp-action="Index"
   asp-route-numPagina="@(Model.PageIndex + 1)"
   class="btn btn-default @nextDisabled">
    Siguiente
</a>

