@model IEnumerable<Clinica.Web.Models.ProfesionalTipo>

@{
    ViewData["Title"] = "Index";
}

<h2>Listado</h2>

<p>
    <a asp-action="Create">Crear nuevo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estado)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estado)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ProfesionalTipoId"><span class="glyphicon glyphicon-edit" aria-hidden="true"/></a> |
                <a asp-action="Details" asp-route-id="@item.ProfesionalTipoId"><span class="glyphicon glyphicon-search" aria-hidden="true" /></a> |
                <a asp-action="Delete" asp-route-id="@item.ProfesionalTipoId"><span class="glyphicon glyphicon-trash" aria-hidden="true" /></a>
            </td>
        </tr>
}
    </tbody>
</table>
