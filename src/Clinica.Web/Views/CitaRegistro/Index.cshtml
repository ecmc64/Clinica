@model IEnumerable<Clinica.Web.Models.ViewModels.CitaRegistroViewModel>

@{
    ViewData["Title"] = "Index";
}

<h2>Listado</h2>

<p>
    <a asp-action="Create">Crear Nuevo</a>
</p>
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CitaId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaRegistro)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProfesionalId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PacienteId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CitaTipoId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaCita)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Precio)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CitaId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FechaRegistro)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Profesional.Nombres)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Paciente.Nombres)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CitaTipo.Descripcion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FechaCita)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Precio)
                </td>
                <td>
                    @*<a asp-action="Edit" asp-route-id="@item.CitaId"><span class="glyphicon glyphicon-edit" aria-hidden="true"></span></a> |*@
                    <a asp-action="Details" asp-route-id="@item.CitaId"><span class="glyphicon glyphicon-search" aria-hidden="true"></span></a> |
                    <a asp-action="Delete" asp-route-id="@item.CitaId"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></a>
                </td>
            </tr>
        }
    </tbody>
</table>
