@model IEnumerable<Clinica.Web.Models.CentroMedico>

@{
    ViewData["Title"] = "Index";
}

<h2>@ViewBag.Titulo</h2>

<p>
    <a asp-action="Create">Crear nuevo</a>
</p>
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Direccion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefonos)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Direccion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefonos)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CentroMedicoId"><span class="glyphicon glyphicon-edit" aria-hidden="true"></span></a> |
                <a asp-action="Details" asp-route-id="@item.CentroMedicoId"><span class="glyphicon glyphicon-search" aria-hidden="true"></span></a> |
                <a asp-action="Delete" asp-route-id="@item.CentroMedicoId"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></a>
            </td>
        </tr>
}
    </tbody>
</table>
