@model Clinica.Web.Models.Profesional

@{
    ViewData["Title"] = "Create";
}

<h2>Creación</h2>

<form asp-action="Create">
    <div class="form-horizontal">
        <h4>Profesional</h4>
        <hr />
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Email" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <div class="checkbox">
                    <input asp-for="Estado" />
                    <label asp-for="Estado"></label>
                </div>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Nombres" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Nombres" class="form-control" />
                <span asp-validation-for="Nombres" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ProfesionalTipoId" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="ProfesionalTipoId" class ="form-control" asp-items="ViewBag.ProfesionalTipoId"></select>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Telefonos" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Telefonos" class="form-control" />
                <span asp-validation-for="Telefonos" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Crear" class="btn btn-primary" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Volver a Listado</a>
</div>

